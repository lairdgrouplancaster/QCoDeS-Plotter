{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "properties": {
        
        "GUI": {
            "type": "object",
            "properties": {
                "plot_frame_fraction": {
                    "type": "number",
                    "exclusiveMinimum": 0,
                    "exclusiveMaximum": 1,
                    "default": 0.47
                },
                "main_frame_size": {
                    "type": "array",
                    "items": { "type": "integer"},
                    "minItems": 2,
                    "maxItems": 2,
                    "default": [750, 700]
                }
            },
            "required": ["plot_frame_fraction", "main_frame_size"],
            "additionalProperties": false
        },
        
        "file": {
            "type": "object",
            "properties": {
                "default_load_path": {
                    "type": "string",
                    "default": ""
                },
                "last_file_path": {
                    "type": "string",
                    "default": ""
                }
            },
            "required": ["default_load_path", "last_file_path"],
            "additionalProperties": false
        },
        
        "user_preference": {
            "type": "object",
            "properties": {
                "theme":{
                    "type": "string",
                    "enum": ["light", "dark", "pyqt"],
                    "default": "light"
                },
                "bar_colour" : {
                    "type": "string",
                    "enum": ["none", "cividis", "inferno", "magma", "plasma", "turbo", "viridis"],
                    "default": "viridis"
                },
                "confirm_close": {
                    "type": "boolean",
                    "default": true
                },
                "default_refresh_rate": {
                    "type": "number",
                    "minimum": 1,
                    "default": 10
                }
            },
            "required": ["theme", "bar_colour", "confirm_close", "default_refresh_rate"],
            "additionalProperties": false
        },
        
        "runtime_settings": {
            "type": "object",
            "properties": {
                "max_threads": {
                    "type": "integer",
                    "minimum": 1,
                    "default": 4
                },
                "del_grace_period": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 300,
                    "default": 10
                }
             },
             "required": ["max_threads", "del_grace_period"],
             "additionalProperties": false 
        }
    },
    "required": ["GUI", "file", "user_preference", "runtime_settings"],
    "additionalProperties": false
}