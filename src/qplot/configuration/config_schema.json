{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "properties": {
        
        "GUI": {
            "type": "object",
            "properties": {
                "plot_frame_fraction": {
                    "type": "number",
                    "exclusiveMinimum": 0,
                    "exclusiveMaximum": 1,
                    "default": 0.47
                },
                "main_frame_size": {
                    "type": "array",
                    "items": { "type": "integer"},
                    "minItems": 2,
                    "maxItems": 2,
                    "default": [750, 700]
                }
            },
            "required": ["plot_frame_fraction", "main_frame_size"],
            "additionalProperties": false
        },
        
        "file": {
            "type": "object",
            "properties": {
                "default_load_path": {
                    "type": "string",
                    "default": ""
                },
                "last_file_path": {
                    "type": "string",
                    "default": ""
                },
                "max_threads": {
                    "type": "integer",
                    "minimum": 1,
                    "default": 4
                }
            },
            "required": ["default_load_path", "last_file_path", "max_threads"],
            "additionalProperties": false
        },
        
        "user_preference": {
            "type": "object",
            "properties": {
                "theme":{
                    "type": "string",
                    "enum": ["light", "dark", "pyqt"],
                    "default": "light"
                },
                "confirm_close": {
                    "type": "boolean",
                    "default": true
                }
            },
            "required": ["theme", "confirm_close"],
            "additionalProperties": false
        }
        
    },
    "required": ["GUI", "file", "user_preference"],
    "additionalProperties": false
}